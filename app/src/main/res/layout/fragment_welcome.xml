<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_rectangle"
        tools:context=".MainFragment">

        <ImageView
            android:id="@+id/roundImageView1"
            android:layout_width="614dp"
            android:layout_height="388dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_oval"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/roundImageView2"
            android:layout_width="386dp"
            android:layout_height="297dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_oval"
            app:layout_constraintStart_toStartOf="@+id/roundImageView1"
            app:layout_constraintTop_toTopOf="@+id/roundImageView1"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/roundImageView3"
            android:layout_width="368dp"
            android:layout_height="186dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_oval"
            app:layout_constraintStart_toStartOf="@+id/roundImageView2"
            app:layout_constraintTop_toTopOf="@+id/roundImageView2"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/mainTopImageView"
            android:layout_width="190dp"
            android:layout_height="188dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_wallet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/coinInfoGroup"
            android:layout_width="180dp"
            android:layout_height="135dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="125dp"
            android:background="@drawable/ic_rectangle01"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainTopImageView"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/coinPriceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:text="$1280"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:id="@+id/coinNameGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/coinTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:text="ETH  -"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/coinLongTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="5dp"
                    android:paddingTop="20dp"
                    android:text="Ethereum"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>


            <TextView
                android:id="@+id/coinBottomPrice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="20dp"
                android:paddingTop="0dp"
                android:paddingBottom="5dp"
                android:text="$1280"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/coinInfoGroup2"
            android:layout_width="180dp"
            android:layout_height="165dp"
            android:background="@drawable/ic_rectangle02"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/coinInfoGroup"
            app:layout_constraintTop_toTopOf="@+id/coinInfoGroup"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/coinPriceText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:text="$1280"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/coinNameGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/coinTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:text="ETH  -"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/coinLongTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="5dp"
                    android:paddingTop="20dp"
                    android:text="Ethereum"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>


            <TextView
                android:id="@+id/coinBottomPrice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="20dp"
                android:paddingTop="0dp"
                android:paddingBottom="5dp"
                android:text="$1280"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/coinInfoGroup3"
            android:layout_width="180dp"
            android:layout_height="165dp"
            android:layout_marginTop="235dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/ic_rectangle03"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/coinInfoGroup"
            app:layout_constraintTop_toBottomOf="@+id/mainTopImageView">

            <TextView
                android:id="@+id/coinPriceText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:text="$1280"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/coinNameGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/coinTextView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:text="ETH  -"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/coinLongTextView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="5dp"
                    android:paddingTop="20dp"
                    android:text="Ethereum"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>


            <TextView
                android:id="@+id/coinBottomPrice3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="20dp"
                android:paddingTop="0dp"
                android:paddingBottom="5dp"
                android:text="$1280"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/coinInfoGroup4"
            android:layout_width="180dp"
            android:layout_height="165dp"
            android:background="@drawable/ic_rectangle04"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/coinInfoGroup3"
            app:layout_constraintEnd_toEndOf="@+id/coinInfoGroup2"
            app:layout_constraintStart_toStartOf="@+id/coinInfoGroup2"
            app:layout_constraintTop_toTopOf="@+id/coinInfoGroup3"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/coinPriceText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:text="$1280"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/coinTextView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:text="ETH  -"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/coinLongTextView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="5dp"
                    android:paddingTop="20dp"
                    android:text="Ethereum"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>


            <TextView
                android:id="@+id/coinBottomPrice4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="20dp"
                android:paddingTop="0dp"
                android:paddingBottom="5dp"
                android:text="$1280"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>